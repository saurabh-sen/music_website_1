extends base.pug

block scripts
    script(src="./static/script.js")
    link(rel="icon", href="./static/favicon.ico")

block style
    style
        include ../static/style.css
        include ../static/styleContact.css

block content
    nav#navbar
        ul
            div#logo
                img(src="./static/music_1.png")
            li #[a(href="/") Home]
            li #[a(href="/") About]
            li #[a(href="/contact") Contact Us]
            li #[a(href="/") Services]
    div.container
        div#heading
            h1 Contact Us
        form(action="/contact", method="post", class="myForm")
            input(type="text", class="myInput", name="name", placeholder="Enter your Name")
            input(type="phone", class="myInput", name="phone", placeholder="Enter your Phone No.")
            input(type="email", class="myInput", name="email", placeholder="Enter your Email Id")
            input(type="url", class="myInput", name="url", placeholder="Enter your YouTube Channel Url")
            input(type="text", class="myInput", name="desc", placeholder="Enter your Favourite Music Genre")
            button.btn
                |SUBMIT